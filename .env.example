# Canvas API
CANVAS_TOKEN=your_canvas_api_token
# Optional: override base URL if using institution-specific Canvas
CANVAS_BASE_URL=https://canvas.instructure.com/api/v1/

# Database
# Optional: custom SQLite path (default: data/canvas_bot.db)
